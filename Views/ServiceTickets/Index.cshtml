@model IEnumerable<Kish_AndreiCezar_Project.Models.ServiceTicket>
@{
    ViewData["Title"] = "Comenzi service";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Comenzi service</h2>
    <a class="btn btn-primary" asp-action="Create">Inregistreaza comanda</a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-sm-3">
        <label class="form-label">Status</label>
        <select name="status" class="form-select" asp-items="ViewBag.StatusOptions">
            <option value="">Toate</option>
        </select>
    </div>
    <div class="col-sm-3">
        <label class="form-label">Mecanic</label>
        <select name="mechanicId" class="form-select" asp-items="ViewBag.Mechanics">
            <option value="">Toti</option>
        </select>
    </div>
    <div class="col-sm-3">
        <label class="form-label">Producator</label>
        <select name="manufacturerId" class="form-select" asp-items="ViewBag.Manufacturers">
            <option value="">Toti</option>
        </select>
    </div>
    <div class="col-sm-3">
        <label class="form-label">Sortare</label>
        <select name="sort" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(ViewBag.Sort))">Data (crescator)</option>
            <option value="date_desc" selected="@(ViewBag.Sort as string == "date_desc" ? "selected" : null)">Data (descrescator)</option>
            <option value="cost" selected="@(ViewBag.Sort as string == "cost" ? "selected" : null)">Cost estimat</option>
            <option value="mileage" selected="@(ViewBag.Sort as string == "mileage" ? "selected" : null)">Kilometraj</option>
        </select>
    </div>
    <div class="col-12 text-end">
        <button type="submit" class="btn btn-outline-primary">Aplica filtre</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Data intrare</th>
            <th>Client</th>
            <th>Model</th>
            <th>Mecanic</th>
            <th>Status</th>
            <th>Ore</th>
            <th>Cost estimat</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IntakeDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Customer?.FullName</td>
                <td>@item.CarModel?.Manufacturer?.Name @item.CarModel?.Name</td>
                <td>@item.Mechanic?.FullName</td>
                <td>@item.Status</td>
                <td>@item.EstimatedHours</td>
                <td>@item.EstimatedCost.ToString("0.##") lei</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalii</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editeaza</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>

