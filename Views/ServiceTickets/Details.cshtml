@model Kish_AndreiCezar_Project.Models.ServiceTicket
@{
    ViewData["Title"] = "Detalii comanda";
}

<h2>Comanda #@Model.Id</h2>
<dl class="row">
    <dt class="col-sm-3">Client</dt>
    <dd class="col-sm-9">@Model.Customer?.FullName</dd>

    <dt class="col-sm-3">Vehicul</dt>
    <dd class="col-sm-9">@Model.CarModel?.Manufacturer?.Name @Model.CarModel?.Name</dd>

    <dt class="col-sm-3">Tip</dt>
    <dd class="col-sm-9">@Model.CarModel?.VehicleType</dd>

    <dt class="col-sm-3">Mecanic</dt>
    <dd class="col-sm-9">@Model.Mechanic?.FullName (@Model.Mechanic?.Specialty)</dd>

    <dt class="col-sm-3">Data intrare</dt>
    <dd class="col-sm-9">@Model.IntakeDate.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Kilometraj</dt>
    <dd class="col-sm-9">@Model.MileageKm km</dd>

    <dt class="col-sm-3">Ore estimate</dt>
    <dd class="col-sm-9">@Model.EstimatedHours</dd>

    <dt class="col-sm-3">Cost estimat</dt>
    <dd class="col-sm-9">@Model.EstimatedCost lei</dd>

    <dt class="col-sm-3">Descriere</dt>
    <dd class="col-sm-9">@Model.Complaint</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editeaza</a>
<a asp-action="Index" class="btn btn-secondary">Inapoi</a>

