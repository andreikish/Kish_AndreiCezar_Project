@model Kish_AndreiCezar_Project.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Panou general";
}

<h1 class="mb-4">Panou general service auto</h1>

<div class="row g-3 mb-4">
    <div class="col-sm-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Producatori</h6>
                <h3>@Model.ManufacturersCount</h3>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Modele</h6>
                <h3>@Model.CarModelsCount</h3>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Comenzi active</h6>
                <h3>@Model.TicketsCount</h3>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Clienti</h6>
                <h3>@Model.CustomersCount</h3>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="text-muted">Mecanici</h6>
                <h3>@Model.MechanicsCount</h3>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Ultimele comenzi</span>
                <a asp-controller="ServiceTickets" asp-action="Index" class="btn btn-sm btn-outline-primary">Vezi toate</a>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Client</th>
                            <th>Model</th>
                            <th>Tip</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model.LatestTickets)
                        {
                            <tr>
                                <td>@t.IntakeDate.ToString("yyyy-MM-dd")</td>
                                <td>@t.Customer?.FullName</td>
                                <td>@t.CarModel?.Manufacturer?.Name @t.CarModel?.Name</td>
                                <td>@t.CarModel?.VehicleType</td>
                                <td>@t.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow-sm mb-3">
            <div class="card-header">Predictie maintenance (ML.NET prin REST)</div>
            <div class="card-body">
                <form asp-action="Predict" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.VehicleModel" class="form-label">Tip vehicul</label>
                            <input asp-for="PredictionForm.VehicleModel" class="form-control" placeholder="ex: Car" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.MileageKm" class="form-label">Kilometraj</label>
                            <input asp-for="PredictionForm.MileageKm" class="form-control" type="number" step="0.1" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.VehicleAge" class="form-label">Varsta vehicul (ani)</label>
                            <input asp-for="PredictionForm.VehicleAge" class="form-control" type="number" step="0.1" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.MaintenanceHistory" class="form-label">Istoric maintenance</label>
                            <select asp-for="PredictionForm.MaintenanceHistory" class="form-select">
                                <option value="">Selecteaza...</option>
                                <option value="Good">Bun</option>
                                <option value="Average">Mediu</option>
                                <option value="Poor">Proast</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.ReportedIssues" class="form-label">Probleme raportate</label>
                            <input asp-for="PredictionForm.ReportedIssues" class="form-control" type="number" step="0.1" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.FuelType" class="form-label">Tip combustibil</label>
                            <select asp-for="PredictionForm.FuelType" class="form-select">
                                <option value="">Selecteaza...</option>
                                <option value="Petrol">Benzina</option>
                                <option value="Diesel">Motorina</option>
                                <option value="Electric">Electric</option>
                                <option value="Hybrid">Hibrid</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.TransmissionType" class="form-label">Tip transmisie</label>
                            <select asp-for="PredictionForm.TransmissionType" class="form-select">
                                <option value="">Selecteaza...</option>
                                <option value="Manual">Manual</option>
                                <option value="Automatic">Automat</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.EngineSize" class="form-label">Marime motor (L)</label>
                            <input asp-for="PredictionForm.EngineSize" class="form-control" type="number" step="0.1" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.TireCondition" class="form-label">Stare anvelope</label>
                            <select asp-for="PredictionForm.TireCondition" class="form-select">
                                <option value="">Selecteaza...</option>
                                <option value="New">Nou</option>
                                <option value="Good">Buna</option>
                                <option value="Worn Out">Uzata</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.BrakeCondition" class="form-label">Stare frane</label>
                            <select asp-for="PredictionForm.BrakeCondition" class="form-select">
                                <option value="">Selecteaza...</option>
                                <option value="New">Nou</option>
                                <option value="Good">Buna</option>
                                <option value="Worn Out">Uzate</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PredictionForm.BatteryStatus" class="form-label">Stare baterie</label>
                            <select asp-for="PredictionForm.BatteryStatus" class="form-select">
                                <option value="">Selecteaza...</option>
                                <option value="New">Nou</option>
                                <option value="Good">Buna</option>
                                <option value="Weak">Slaba</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-3 d-flex align-items-center gap-3">
                        <button type="submit" class="btn btn-primary">Verifica</button>
                        @if (Model.NeedsMaintenance.HasValue)
                        {
                            <span class="fw-bold @(Model.NeedsMaintenance.Value ? "text-danger" : "text-success")">
                                @Model.MaintenanceStatus
                            </span>
                        }
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">Plan service (gRPC)</div>
            <div class="card-body">
                <form asp-action="Advisor" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row g-2">
                        <div class="col-md-8">
                            <label asp-for="GrpcForm.CarModel" class="form-label">Model</label>
                            <input asp-for="GrpcForm.CarModel" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="GrpcForm.MileageKm" class="form-label">Kilometraj</label>
                            <input asp-for="GrpcForm.MileageKm" class="form-control" />
                        </div>
                    </div>
                    <div class="mt-3 d-flex align-items-center gap-3">
                        <button type="submit" class="btn btn-outline-primary">Solicita</button>
                        @if (Model.GrpcResult is not null)
                        {
                            <span class="fw-bold">@Model.GrpcResult.Severity</span>
                        }
                    </div>
                </form>

                @if (Model.GrpcResult is not null)
                {
                    <div class="mt-3">
                        <p class="fw-bold">@Model.GrpcResult.Recommendation</p>
                        <ul>
                            @foreach (var t in Model.GrpcResult.SuggestedTasks)
                            {
                                <li>@t</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
