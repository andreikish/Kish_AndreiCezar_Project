@model IEnumerable<Kish_AndreiCezar_Project.Models.CarModel>
@{
    ViewData["Title"] = "Modele auto";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Modele auto</h2>
    <a class="btn btn-primary" asp-action="Create">Adauga model</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Model</th>
            <th>Producator</th>
            <th>An lansare</th>
            <th>Tip</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Manufacturer?.Name</td>
                <td>@item.YearFrom</td>
                <td>@item.VehicleType</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalii</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editeaza</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>

