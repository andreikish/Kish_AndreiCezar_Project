@model IEnumerable<Kish_AndreiCezar_Project.Models.Mechanic>
@{
    ViewData["Title"] = "Mecanici";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Mecanici</h2>
    <a class="btn btn-primary" asp-action="Create">Adauga mecanic</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nume</th>
            <th>Specializare</th>
            <th>Experienta</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Specialty</td>
                <td>@item.YearsExperience ani</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalii</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editeaza</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>

